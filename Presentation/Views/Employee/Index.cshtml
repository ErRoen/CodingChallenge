@model IEnumerable<CodingChallenge.Application.Employees.Queries.EmployeeModel>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrossPaycheck)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NetPaycheck)
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossPaycheck)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetPaycheck)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    <tr>
        <td></td>
        <td>@Model.Sum(m => m.GrossPaycheck).ToString("C")</td>
        <td>@Model.Sum(m => m.NetPaycheck).ToString("C")</td>
        <td></td>
    </tr>
    </tbody>
</table>
